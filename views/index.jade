extends layout

block content
    div(class="navbar navbar-default navbar-fixed-top" role="navigation")
        div(class="container")
            div(class="navbar-header")
               button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a(class="navbar-brand" href="#/") Whiteboard Online

            div(class="collapse navbar-collapse")
                ul(class="nav navbar-nav")
                    li(ng-class="getClass('/index')")
                      a(href='#/index' ng-show='useronline') Home
                    li(ng-class="getClass('/profile')" ng-show='useronline')
                      a(href='#/profile') Profile
                    li(ng-class="getClass('/Login')" ng-hide='useronline')
                      a(href='#/Login') Login   
                li(class='showUsername' ng-show='useronline') 
                  a(id="logoutbtn" href="#" ng-click="logout()") Log out      
                li(class ='showUsername' ng-show='useronline') 
                  span(class='glyphicon glyphicon-user')  
                  span(id='username') {{useronline}}

    div.container
        div(class="page-content" ng-view)

    script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(type='text/javascript' src='js/lib/bootstrap.min.js')
    script(type='text/javascript' src="js/lib/paper.js")
    script(type='text/javascript' src='js/lib/angular.js')
    script(type='text/javascript' src='js/lib/angular-cookies.js')
    script(type='text/javascript' src="/socket.io/socket.io.js")
    script(type='text/javascript' src="js/socket.js")
    script(type='text/javascript' src='js/app.js')
    script(type='text/javascript' src='js/controller.js')
    script(type='text/javascript' src='js/services.js')
    script(type='text/javascript' src='js/lib/ngDialog.min.js')



